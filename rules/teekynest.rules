rule "Turn off all lights when all phones leave wifi"
when
  Item DanPhone changed or 
  Item TiffPhone changed
then
	if (DanPhone.state == OFF && TiffPhone.state == OFF) {
		sendCommand(Lights, OFF)
  	}	
end



