Switch Light_Green 	"Green LED"       (Lights) { gpio="pin:5 debounce:10 activelow:yes" }
Switch FamilyRoomLights 	"Family Room"       (Lights) {  } [ "Switchable" ]
Switch  TestSwitch1     "Kitchen Switch" [ "Switchable" ]

/* Buttons, switches, controls */
